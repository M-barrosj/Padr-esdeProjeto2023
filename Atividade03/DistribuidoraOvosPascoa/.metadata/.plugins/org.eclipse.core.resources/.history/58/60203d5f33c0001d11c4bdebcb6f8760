	public void exibirOvoDePascoa() {
		System.out.println("Ovo de pascoa Crocante - Peso: 215g, Embalagem: vermelha e amarela, Recheio: bombom, Valor: R$ 43,99, Fabricante: Garoto");
		
	}
}

